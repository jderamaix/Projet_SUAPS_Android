<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">@dimen/tailleTextDefaut</item>
        <item name="android:textColor">@color/couleurTexteDefaut</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ElementVertical">
        <item name="android:paddingTop">@dimen/espacement</item>
        <item name="android:paddingBottom">@dimen/espacement</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="ElementHorizontal">
        <item name="android:paddingLeft">@dimen/espacement</item>
        <item name="android:paddingRight">@dimen/espacement</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ElementHorizontal.Bouton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/couleurTexteContreombrage</item>
    </style>

    <style name="ConteneurVertical">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ConteneurHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

</resources>
