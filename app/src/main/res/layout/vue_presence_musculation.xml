<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/id_cardview_musculation"
    android:scrollbars="vertical"
    android:focusable="true"
    android:layout_margin="2dp"
    android:foreground="?android:attr/selectableItemBackground"
    cardview:contentPadding="5dp"
    android:background="@drawable/fonds"
    cardview:cardCornerRadius="4dp"
    cardview:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_nomPers"
            android:layout_width="0dp"
            android:padding="5dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/noir"
            android:textSize="@dimen/tailleTexte"
            tools:text="OMAR" />

        <TextView
            android:id="@+id/tv_prenomPers"
            android:layout_width="0dp"
            android:padding="5dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/noir"
            android:textSize="@dimen/tailleTexte"
            tools:text="TOIBRANI" />

        <TextView
            android:id="@+id/tv_tempsPasse"
            android:layout_width="0dp"
            android:padding="5dp"
            android:layout_height="match_parent"
            android:textColor="@color/noir"
            android:layout_weight="1"
            android:textSize="@dimen/tailleTexte"
            tools:text="18h30" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:id="@+id/iv_lighning_muscu"
            android:contentDescription="@string/etat_etudiant"
            android:tint="@color/noir"
            android:src="@drawable/light_on"/>



    </LinearLayout>




</android.support.v7.widget.CardView>